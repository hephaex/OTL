# OTL Environment Variables
#
# Copy this file to .env and fill in your values.
# These override config.toml settings.

# =============================================================================
# Server
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8080

# =============================================================================
# Database Connections
# =============================================================================
DATABASE_URL=postgres://otl:otl_dev_password@localhost:5432/otl
SURREALDB_URL=ws://localhost:8000
SURREALDB_USER=root
SURREALDB_PASS=root
QDRANT_URL=http://localhost:6334

# =============================================================================
# LLM Provider
# =============================================================================
# Options: openai, ollama, azure
LLM_PROVIDER=openai

# OpenAI API Key (required for openai provider)
OPENAI_API_KEY=sk-your-key-here

# Azure OpenAI (if using azure provider)
# OPENAI_BASE_URL=https://your-resource.openai.azure.com

# Ollama URL (for local LLM)
OLLAMA_URL=http://localhost:11434

# Model settings
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info
RUST_LOG=otl=debug,tower_http=debug

# =============================================================================
# Security (Production)
# =============================================================================
# JWT_SECRET=your-super-secret-key-here
# ALLOWED_ORIGINS=https://your-domain.com
